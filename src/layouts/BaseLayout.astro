---
const {
  title = "Hong-Kong Republic",
  description = "Official website of the Government of the Hong-Kong Republic",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta name="author" content="Government of the Hong-Kong Republic" />
    <meta name="theme-color" content="#b80000" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <link rel="icon" href="/HKR/favicon.svg" />
  </head>

  <body>
    <!-- Header -->
    <header class="site-header">
      <div class="header-inner">
        <div class="brand">
          <span class="brand-name">Hong-Kong Republic</span>
        </div>

        <nav class="main-nav">
          <a href="/HKR/">Home</a>
          <a href="/HKR/government">Government</a>
          <a href="/HKR/laws">Laws</a>
          <a href="/HKR/timeline">Timeline</a>
          <a href="/HKR/press">Press</a>
          <a href="/HKR/symbols">National Symbols</a>
        </nav>
      </div>
    </header>

    <!-- Main -->
    <main class="site-main">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="site-footer">
      <div class="footer-inner">
        <div class="footer-brand">
          <img
            src="/HKR/assets/emblem.svg"
            alt="National Emblem of the Hong-Kong Republic"
            class="footer-emblem"
            loading="lazy"
          />
          <div class="footer-text">
            <p class="footer-title">Government of the Hong-Kong Republic</p>
            <p class="footer-sub">
              Official Public Communications Portal
            </p>
          </div>
        </div>

        <div class="footer-meta">
          <p>© 2043–Present Government of the Hong-Kong Republic</p>
          <p class="footer-note">
            Materials published on this website constitute official public communications.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  :root {
    --primary: #b80000;
    --background: #ffffff;
    --text: #111111;
    --muted: #666666;
    --border: #e5e5e5;
  }

  body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Helvetica, Arial, sans-serif;
    color: var(--text);
    background: var(--background);
    line-height: 1.6;
  }

  /* Header */
  .site-header {
    border-bottom: 1px solid var(--border);
    background: #fff;
  }

  .header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .brand-name {
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  .main-nav a {
    margin-left: 1.25rem;
    text-decoration: none;
    color: var(--text);
    font-size: 0.95rem;
  }

  .main-nav a:hover {
    color: var(--primary);
  }

  /* Main */
  .site-main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2.5rem 1.5rem;
  }

  /* Footer */
  .site-footer {
    border-top: 1px solid var(--border);
    margin-top: 4rem;
    background: #fafafa;
  }

  .footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem;
    font-size: 0.85rem;
    color: var(--muted);
  }

  .footer-brand {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-bottom: 1rem;
  }

  .footer-emblem {
    width: 56px;
    height: 56px;
    display: block;
  }

  .footer-title {
    margin: 0;
    font-weight: 600;
    color: #333;
  }

  .footer-sub {
    margin: 0.15rem 0 0 0;
    color: #666;
  }

  .footer-meta p {
    margin: 0.25rem 0;
  }

  .footer-note {
    margin-top: 0.25rem;
  }
</style>
