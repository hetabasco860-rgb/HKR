---
const {
  title = "Hong-Kong Republic",
  description = "Official website of the Hong-Kong Republic Government",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta name="author" content="Government of the Hong-Kong Republic" />
    <meta name="theme-color" content="#b80000" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <link rel="icon" href="/HKR/favicon.svg" />
  </head>

  <body>
    <header class="site-header">
      <div class="header-inner">
        <div class="brand">
          <span class="brand-name">Hong-Kong Republic</span>
        </div>

        <nav class="main-nav">
          <a href="/HKR/">Home</a>
          <a href="/HKR/government">Government</a>
          <a href="/HKR/laws">Laws</a>
          <a href="/HKR/timeline">Timeline</a>
          <a href="/HKR/press">Press</a>
          <a href="/HKR/symbols">National Symbols</a>
        </nav>
      </div>
    </header>

    <main class="site-main">
      <slot />
    </main>

<footer class="site-footer">
  <div class="footer-inner">
    <div class="footer-brand">
      <img
        src="/HKR/assets/emblem.svg"
        alt="National Emblem of the Hong-Kong Republic"
        class="footer-emblem"
        loading="lazy"
      />
      <div class="footer-text">
        <p class="footer-title">Government of the Hong-Kong Republic</p>
        <p class="footer-sub">
          Official Public Communications Portal
        </p>
      </div>
    </div>

    <div class="footer-meta">
      <p>© 2043–Present Government of the Hong-Kong Republic</p>
      <p class="footer-note">
        Materials published on this website constitute official public communications.
      </p>
    </div>
  </div>
</footer>

